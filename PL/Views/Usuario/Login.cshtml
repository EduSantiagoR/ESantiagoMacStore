
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/Usuario/Login.js" type="text/javascript"></script>
    <style>
        body {
            background-color: black;
            font-family: Segoe UI, Frutiger, Dejavu Sans, Helvetica Neue, Arial, sans-serif;
            padding: 50px;
        }

        .letras-blacas {
            color: white;
        }

        #divLogin {
            padding: 30px 10px;
            border: white 2px groove;
            border-radius: 20px;
            width: 50%;
        }
        /* margin-left:20px */
    </style>
</head>
<body class="container">
    <div class="container d-flex justify-content-center">
        <div id="divLogin">
            <h2 class="text-center letras-blacas">Inicio de sesión</h2>
            <div class="d-flex justify-content-center">
                <img src="https://www.thesun.co.uk/wp-content/uploads/2023/02/apple-logo-newnew-op.jpg?strip=all&quality=100&w=1080&h=1080&crop=1" style="width:100px; height:100px" />
            </div>
            <p class="text-center letras-blacas">Inicie sesión con su email y contraseña</p>

            <h4 class="text-center letras-blacas">Email</h4>
            <div class="d-flex justify-content-center">
                <input style="width:50%" class="form-control" placeholder="ejemplo@gmail.com" id="txtEmail" />
            </div><br />

            <h4 class="text-center letras-blacas">Contraseña</h4>
            <div class="d-flex justify-content-center">
                <input style="width:50%" class="form-control" placeholder="Contraseña" type="password" id="txtPassword" />
            </div><br />
            <div class="d-flex flex-column justify-content-center">
                <button onclick="Login()" style="width:40%;margin-inline:auto" class="btn btn-success">Iniciar sesión</button>
                <label style="margin-inline:auto" class="letras-blacas">
                    ¿No tienes una cuenta?
                    <a class="letras-blacas">Registrate</a>
                </label>
            </div>
        </div>
    </div>
</body>

<div id="myModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Mensaje</h5>
            </div>
            <div class="modal-body">
                <label id="txtMessage"></label>
            </div>
            <div class="modal-footer">
                <a id="btnContinuar"  onclick="modalClose()" class="btn btn-success" data-dismiss="modal">Continuar</a>
            </div>
        </div>
    </div>
</div>
